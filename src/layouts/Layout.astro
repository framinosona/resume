---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const {
  title,
  description = "Francois Raminosona - Developer, Tech Enthusiast & Creative Professional. Explore my portfolio, projects, and insights.",
  image,
  type = "website",
} = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={image ? new URL(image, Astro.url) : undefined}
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content={image ? new URL(image, Astro.url) : undefined}
    />

    <title>
      {
        title === "Home"
          ? "Francois Raminosona"
          : `${title} - Francois Raminosona`
      }
    </title>

    <script>
      // Theme toggle functionality
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }

      if (theme !== "light" && theme !== "dark") {
        localStorage.setItem("theme", "light");
      } else {
        localStorage.setItem("theme", theme);
      }
    </script>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-slate-50 to-brand-primary/5 dark:from-slate-900 dark:to-slate-800"
  >
    <div class="min-h-screen flex flex-col">
      <slot />
    </div>
  </body>
</html>
