---
import type { CollectionEntry } from 'astro:content';

interface Props {
  education: CollectionEntry<'education'>;
}

const { education } = Astro.props;

// Simple markdown processor for inline formatting
function processMarkdown(text: string): string {
  if (!text) return text;

  return text
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .replace(/__(.*?)__/g, '<strong>$1</strong>')
    .replace(/(?<!\*)\*([^*]+?)\*(?!\*)/g, '<em>$1</em>')
    .replace(/(?<!_)_([^_]+?)_(?!_)/g, '<em>$1</em>')
    .replace(/`([^`]+?)`/g, '<code class="bg-gray-100 dark:bg-gray-800 px-1 py-0.5 rounded text-sm">$1</code>')
    .replace(/\[([^\]]+?)\]\(([^)]+?)\)/g, '<a href="$2" class="text-purple-600 hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300 underline">$1</a>');
}
---

<article class="education-card bg-white dark:bg-slate-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow border border-gray-200 dark:border-gray-700">
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <div class="flex items-start space-x-4">
        {education.data.logo && (
          <img
            src={education.data.logo}
            alt={`${education.data.institution} logo`}
            class="w-12 h-12 object-contain bg-white/10 rounded-lg"
          />
        )}
        <div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
            {education.data.program}
          </h3>
          <p class="text-lg text-purple-600 dark:text-purple-400 font-medium">
            {education.data.institution}
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            {education.data.location}
          </p>
        </div>
      </div>
      <div class="text-right">
        <div class="text-sm text-gray-500 dark:text-gray-400">
          {education.data.startDate.toLocaleDateString("en-US", {
            month: "short",
            year: "numeric",
          })}
          {" - "}
          {education.data.endDate.toLocaleDateString("en-US", {
            month: "short",
            year: "numeric",
          })}
        </div>
        {education.data.isFeatured && (
          <span class="inline-flex items-center px-2 py-1 text-xs rounded-full font-medium bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 mt-1">
            Featured
          </span>
        )}
      </div>
    </div>

    {education.data.description && (
      <p class="text-gray-700 dark:text-gray-300 mb-4 line-clamp-3" set:html={processMarkdown(education.data.description)}>
      </p>
    )}

    {education.data.achievements.length > 0 && (
      <div class="mb-4">
        <h4 class="font-medium text-gray-900 dark:text-white mb-2 text-sm">
          Key Achievements:
        </h4>
        <ul class="list-disc list-inside space-y-1">
          {education.data.achievements.slice(0, 3).map((achievement) => (
            <li class="text-sm text-gray-700 dark:text-gray-300 line-clamp-2" set:html={processMarkdown(achievement)}>
            </li>
          ))}
          {education.data.achievements.length > 3 && (
            <li class="text-sm text-gray-500 dark:text-gray-400 italic">
              +{education.data.achievements.length - 3} more achievements...
            </li>
          )}
        </ul>
      </div>
    )}

    {education.data.technologies.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {education.data.technologies.slice(0, 4).map((tech) => (
          <span class="px-2 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 text-xs rounded">
            {tech}
          </span>
        ))}
        {education.data.technologies.length > 4 && (
          <span class="px-2 py-1 bg-gray-100 dark:bg-gray-900 text-gray-600 dark:text-gray-400 text-xs rounded">
            +{education.data.technologies.length - 4} more
          </span>
        )}
      </div>
    )}

    <div class="flex items-center justify-between">
      <span class="text-sm text-gray-500 dark:text-gray-400">
        Duration: {Math.round((education.data.endDate.getTime() - education.data.startDate.getTime()) / (1000 * 60 * 60 * 24 * 365 * 12))} months
      </span>

      {education.data.relatedDiplomas.length > 0 && (
        <span class="text-xs text-gray-500 dark:text-gray-400">
          {education.data.relatedDiplomas.length} related diploma{education.data.relatedDiplomas.length > 1 ? 's' : ''}
        </span>
      )}
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
