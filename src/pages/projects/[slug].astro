---
import { type CollectionEntry, getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
}

type Props = CollectionEntry<"projects">;

const project = Astro.props;
const { Content } = await project.render();

// Get related projects (same technologies, related job/hackathon, or similar tags)
const allProjects = await getCollection("projects");
const relatedProjects = allProjects
  .filter((p) => p.slug !== project.slug)
  .map((p) => {
    let score = 0;

    // Score by shared technologies
    const sharedTech = p.data.technologies.filter((tech) =>
      project.data.technologies.includes(tech)
    ).length;
    score += sharedTech * 3;

    // Score by shared tags
    const sharedTags = p.data.tags.filter((tag) =>
      project.data.tags.includes(tag)
    ).length;
    score += sharedTags * 2;

    // Score by related job/hackathon
    if (
      (project.data as any).relatedJob &&
      (p.data as any).relatedJob === (project.data as any).relatedJob
    ) {
      score += 10;
    }
    if (
      (project.data as any).relatedHackathon &&
      (p.data as any).relatedHackathon ===
        (project.data as any).relatedHackathon
    ) {
      score += 10;
    }

    return { project: p, score };
  })
  .filter(({ score }) => score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, 3)
  .map(({ project }) => project);
