---
import { getCollection } from "astro:content";
import MainLayout from "../layouts/MainLayout.astro";
import JobBlock from "../components/JobBlock.astro";
import EducationBlock from "../components/EducationBlock.astro";
import DiplomaBlock from "../components/DiplomaBlock.astro";
import HackathonCard from "../components/HackathonCard.astro";

// Simple markdown processor for inline formatting
function processMarkdown(text: string): string {
  if (!text) return text;

  return (
    text
      // Bold: **text** or __text__
      .replace(/\*\*(.*?)\*\*/g, "<strong>$1</strong>")
      .replace(/__(.*?)__/g, "<strong>$1</strong>")
      // Italic: *text* or _text_
      .replace(/(?<!\*)\*([^*]+?)\*(?!\*)/g, "<em>$1</em>")
      .replace(/(?<!_)_([^_]+?)_(?!_)/g, "<em>$1</em>")
      // Code: `text`
      .replace(
        /`([^`]+?)`/g,
        '<code class="bg-gray-100 dark:bg-gray-800 px-1 py-0.5 rounded text-sm">$1</code>'
      )
      // Links: [text](url)
      .replace(
        /\[([^\]]+?)\]\(([^)]+?)\)/g,
        '<a href="$2" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 underline">$1</a>'
      )
  );
}

const jobs = await getCollection("jobs");
const education = await getCollection("education");
const diplomas = await getCollection("diplomas");
const hackathons = await getCollection("hackathons");
const skills = await getCollection("skills");

// Sort by date (most recent first)
jobs.sort((a, b) => b.data.startDate.valueOf() - a.data.startDate.valueOf());
// Education sorting - check if items have startDate or endDate
education.sort((a, b) => {
  const aDate = a.data.endDate || a.data.startDate;
  const bDate = b.data.endDate || b.data.startDate;
  return bDate.valueOf() - aDate.valueOf();
});
diplomas.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
hackathons.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Group skills by category
const skillsByCategory =
  skills.length > 0
    ? skills[0].data.reduce(
        (acc, skill) => {
          const category = skill.category;
          if (!acc[category]) acc[category] = [];
          acc[category].push(skill);
          return acc;
        },
        {} as Record<string, any[]>
      )
    : {};
