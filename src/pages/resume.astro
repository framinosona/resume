        <div class="space-y-8">
          {
            jobs.map((job) => (
              <JobBlock job={job} />
            ))
          }
        </div>
      </section>

      <!-- Education -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Education
        </h2>
        <div class="space-y-6">
          {
            education.map((edu) => (
              <EducationBlock education={edu} diplomas={diplomas} />
            ))
          }
        </div>
      </section>

      <!-- Diplomas & Certifications -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Diplomas & Certifications
        </h2>
        <div class="space-y-6">
          {
            diplomas.map((diploma) => (
              <DiplomaBlock diploma={diploma} />
            ))
          }
        </div>
      </section>

      <!-- Hackathons -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Hackathons & Competitions
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {
            hackathons
              .filter((h) => h.data.isFeatured)
              .slice(0, 4)
              .map((hackathon) => (
                <HackathonCard hackathon={hackathon} showReadMore={false} />
              ))
          }
        </div>

