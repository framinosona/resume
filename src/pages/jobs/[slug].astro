---
import { type CollectionEntry, getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  const jobs = await getCollection("jobs");
  return jobs.map((job) => ({
    params: { slug: job.slug },
    props: job,
  }));
}

type Props = CollectionEntry<"jobs">;

const job = Astro.props;
const { Content } = await job.render();

// Get related jobs (same company or technologies)
const allJobs = await getCollection("jobs");
const relatedJobs = allJobs
  .filter(
    (e) =>
      e.slug !== job.slug &&
      (e.data.company === job.data.company ||
        e.data.technologies.some((tech) =>
          job.data.technologies.includes(tech)
        ))
  )
  .slice(0, 3);
---

<MainLayout
  title={`${job.data.position} at ${job.data.company} - Experience`}
  description={job.data.description}
  image={job.data.logo}
>
  <article class="bg-white dark:bg-slate-900 min-h-screen">
    <!-- Hero Section -->
    <header
      class="relative bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16"
    >
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center text-sm text-blue-100 mb-4">
          <a href="/jobs" class="hover:text-white">Experience</a>
          <svg
            class="w-4 h-4 mx-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
          <span>{job.data.company}</span>
        </div>

        <div class="flex items-start justify-between mb-6">
          <div class="flex-1">
            <h1 class="text-4xl font-bold mb-2">{job.data.position}</h1>
            <h2 class="text-2xl text-blue-100 mb-4">{job.data.company}</h2>
            <p class="text-xl text-blue-100 mb-6 max-w-3xl">
              {job.data.description}
            </p>
          </div>
          {
            job.data.logo && (
              <img
                src={job.data.logo}
                alt={`${job.data.company} logo`}
                class="sm:w-40 sm:h-40 object-contain ml-6 bg-white/10 rounded-lg p-2 w-20 h-20"
              />
            )
          }
        </div>

        <div class="flex flex-wrap items-center gap-6">
          <div class="flex items-center text-blue-100">
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            {
              job.data.startDate.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
              })
            } - {
              job.data.endDate
                ? job.data.endDate.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                  })
                : "Present"
            }
          </div>

          <div class="flex items-center text-blue-100">
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            {job.data.location}
          </div>

          {
            job.data.current && (
              <span class="px-3 py-1 bg-green-500/20 text-green-100 rounded-full text-sm font-medium">
                üìç Current Position
              </span>
            )
          }
        </div>
      </div>
    </header>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Key Achievements -->
      {
        job.data.achievements.length > 0 && (
          <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
              Key Achievements
            </h2>
            <div class="bg-gray-50 dark:bg-slate-800 rounded-lg p-6">
              <ul class="space-y-3">
                {job.data.achievements.map((achievement) => (
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-gray-700 dark:text-gray-300">
                      {achievement}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          </section>
        )
      }

      <!-- Technologies -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Technologies & Skills
        </h2>
        <div class="flex flex-wrap gap-3">
          {
            job.data.technologies.map((tech) => (
              <a
                href={`/tags/${tech.toLowerCase().replace(/[^a-z0-9]/g, "-")}`}
                class="px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors font-medium"
              >
                {tech}
              </a>
            ))
          }
        </div>
      </section>

      <!-- Experience Content -->
      <section class="mb-12">
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <Content />
        </div>
      </section>

      <!-- Tags -->
      {
        job.data.tags.length > 0 && (
          <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
              Tags
            </h2>
            <div class="flex flex-wrap gap-2">
              {job.data.tags.map((tag) => (
                <a
                  href={`/tags/${tag.toLowerCase().replace(/[^a-z0-9]/g, "-")}`}
                  class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </section>
        )
      }

      <!-- Navigation -->
      <nav
        class="flex justify-between items-center py-8 border-t border-gray-200 dark:border-gray-700"
      >
        <a
          href="/resume"
          class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium"
        >
          Back to Resume
          <svg
            class="w-4 h-4 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </nav>
    </div>

    <!-- Related Experience -->
    {
      relatedJobs.length > 0 && (
        <section class="bg-gray-50 dark:bg-slate-800 py-16">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
              Related Experience
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              {relatedJobs.map((relatedJob) => (
                <article class="bg-white dark:bg-slate-900 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                  <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                      <div class="flex-1">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                          {relatedJob.data.position}
                        </h3>
                        <h4 class="text-blue-600 dark:text-blue-400 mb-2">
                          {relatedJob.data.company}
                        </h4>
                        <div class="text-sm text-gray-500 dark:text-gray-400 mb-3">
                          {relatedJob.data.startDate.toLocaleDateString(
                            "en-US",
                            {
                              year: "numeric",
                              month: "short",
                            }
                          )}{" "}
                          -{" "}
                          {relatedJob.data.endDate
                            ? relatedJob.data.endDate.toLocaleDateString(
                                "en-US",
                                {
                                  year: "numeric",
                                  month: "short",
                                }
                              )
                            : "Present"}
                        </div>
                      </div>
                      {relatedJob.data.logo && (
                        <img
                          src={relatedJob.data.logo}
                          alt={`${relatedJob.data.company} logo`}
                          class="w-16 h-16 object-contain rounded-lg"
                        />
                      )}
                    </div>
                    <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">
                      {relatedJob.data.description}
                    </p>
                    <div class="flex flex-wrap gap-2 mb-4">
                      {relatedJob.data.technologies.slice(0, 3).map((tech) => (
                        <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs rounded">
                          {tech}
                        </span>
                      ))}
                    </div>
                    <a
                      href={`/jobs/${relatedJob.slug}`}
                      class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium"
                    >
                      Read more
                      <svg
                        class="w-4 h-4 ml-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5l7 7-7 7"
                        />
                      </svg>
                    </a>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }
  </article>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
