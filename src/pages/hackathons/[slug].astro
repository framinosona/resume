---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import type { CollectionEntry } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const hackathons = await getCollection('hackathons');
  return hackathons.map((hackathon) => ({
    params: { slug: hackathon.slug },
    props: { hackathon },
  }));
};

type Props = {
  hackathon: CollectionEntry<'hackathons'>;
};

const { hackathon } = Astro.props as Props;
const { Content } = await hackathon.render();

// Get related hackathons (same technologies or same event)
const allHackathons = await getCollection('hackathons');
const relatedHackathons = allHackathons
  .filter(h => h.slug !== hackathon.slug)
  .filter(h =>
    h.data.technologies.some(tech => hackathon.data.technologies.includes(tech))
  )
  .slice(0, 3);
---

<MainLayout
  title={`${hackathon.data.title} - ${hackathon.data.company}`}
  description={hackathon.data.description}
  image={hackathon.data.bannerImage}
>
  <article class="bg-white dark:bg-slate-900 min-h-screen">
    <!-- Header -->
    <header class="bg-gradient-to-r from-purple-600 to-blue-600 text-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Breadcrumb -->
          <nav class="mb-6">
            <ol class="flex items-center justify-center space-x-2 text-sm">
              <li><a href="/" class="text-purple-200 hover:text-white">Home</a></li>
              <li class="text-purple-300">/</li>
              <li><a href="/hackathons" class="text-purple-200 hover:text-white">Hackathons</a></li>
              <li class="text-purple-300">/</li>
              <li class="text-white font-medium">{hackathon.data.company}</li>
            </ol>
          </nav>

          <h1 class="text-4xl font-bold mb-4">{hackathon.data.title}</h1>
          <p class="text-xl text-purple-100 mb-6">{hackathon.data.company}</p>

          <div class="flex flex-wrap justify-center gap-6 text-sm">
            <div class="bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
              <span class="block font-semibold">Date</span>
              {hackathon.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
              <span class="block font-semibold">Duration</span>
              {hackathon.data.duration}
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
              <span class="block font-semibold">Location</span>
              {hackathon.data.location}
            </div>
            {hackathon.data.result && (
              <div class="bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
                <span class="block font-semibold">Result</span>
                {hackathon.data.result}
              </div>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Main Image -->
      {hackathon.data.bannerImage && (
        <div class="mb-12">
          <img
            src={hackathon.data.bannerImage}
            alt={hackathon.data.title}
            class="w-full h-96 object-cover rounded-xl shadow-lg"
          />
        </div>
      )}

      <!-- Technologies and Links -->
      <div class="mb-12 grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Technologies -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Technologies Used</h2>
          <div class="flex flex-wrap gap-2">
            {hackathon.data.technologies.map((tech: string) => (
              <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded-full text-sm font-medium">
                {tech}
              </span>
            ))}
          </div>
        </div>

        <!-- Links and Info -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Links & Resources</h2>
          <div class="space-y-3">
            {hackathon.data.githubUrl && (
              <a
                href={hackathon.data.githubUrl}
                class="flex items-center text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                View Source Code
              </a>
            )}
            {hackathon.data.liveUrl && (
              <a
                href={hackathon.data.liveUrl}
                class="flex items-center text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Live Demo
              </a>
            )}
            {hackathon.data.devpostUrl && (
              <a
                href={hackathon.data.devpostUrl}
                class="flex items-center text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Devpost Entry
              </a>
            )}
            {hackathon.data.teamSize && (
              <div>
                <span class="font-medium text-gray-900 dark:text-white">Team Size:</span>
                <span class="text-gray-600 dark:text-gray-400 ml-2">
                  {hackathon.data.teamSize}
                </span>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Tags -->
      {hackathon.data.tags && hackathon.data.tags.length > 0 && (
        <div class="mb-12">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Tags</h2>
          <div class="flex flex-wrap gap-2">
            {hackathon.data.tags.map((tag: string) => (
              <a
                href={`/tags/${tag.toLowerCase()}`}
                class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Article Content -->
      <div class="prose prose-lg dark:prose-invert max-w-none mb-16">
        <Content />
      </div>

      <!-- Gallery -->
      {hackathon.data.gallery && hackathon.data.gallery.length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Gallery</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {hackathon.data.gallery.map((image: string, index: number) => (
              <img
                src={image}
                alt={`${hackathon.data.title} gallery image ${index + 1}`}
                class="w-full h-64 object-cover rounded-lg shadow-md hover:shadow-lg transition-shadow cursor-pointer"
              />
            ))}
          </div>
        </div>
      )}

      <!-- Related Hackathons -->
      {relatedHackathons.length > 0 && (
        <div class="border-t border-gray-200 dark:border-gray-700 pt-16">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Related Hackathons</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {relatedHackathons.map((related) => (
              <article class="bg-gray-50 dark:bg-slate-800 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
                {related.data.bannerImage && (
                  <img
                    src={related.data.bannerImage}
                    alt={related.data.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                    {related.data.title}
                  </h3>
                  <p class="text-sm text-purple-600 dark:text-purple-400 mb-3">
                    {related.data.company}
                  </p>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
                    {related.data.description}
                  </p>
                  <a
                    href={`/hackathons/${related.slug}`}
                    class="text-purple-600 hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300 font-medium text-sm"
                  >
                    Read more
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      )}

      <!-- Navigation -->
      <div class="border-t border-gray-200 dark:border-gray-700 pt-16">
        <div class="flex justify-between items-center">
          <a
            href="/hackathons"
            class="inline-flex items-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-base font-medium rounded-lg text-gray-700 dark:text-gray-300 bg-white dark:bg-slate-800 hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Hackathons
          </a>

          <div class="text-sm text-gray-500 dark:text-gray-400">
            <time datetime={hackathon.data.date.toISOString()}>
              {hackathon.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </div>
      </div>
    </div>
  </article>
</MainLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
