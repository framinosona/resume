---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';

// Get all content for search
const [allProjects, allHackathons, allJobs] = await Promise.all([
  getCollection('projects'),
  getCollection('hackathons'),
  getCollection('jobs')
]);

// Prepare search data
const searchData = [
  ...allProjects.map(item => ({
    id: item.slug,
    type: 'project',
    title: item.data.title,
    description: item.data.description,
    tags: item.data.tags,
    url: `/projects/${item.slug}`,
    date: item.data.date,
    image: item.data.image,
    technologies: item.data.technologies,
    status: item.data.status,
    featured: item.data.featured || false
  })),
  ...allHackathons.map(item => ({
    id: item.slug,
    type: 'hackathon',
    title: item.data.title,
    description: item.data.description,
    tags: item.data.tags,
    url: `/resume`, // Hackathons are shown on resume page
    date: item.data.startDate,
    location: item.data.location,
    award: item.data.award,
    technologies: item.data.technologies,
    teamSize: item.data.teamSize
  })),
  ...allJobs.map(item => ({
    id: item.slug,
    type: 'job',
    title: `${item.data.position} at ${item.data.company}`,
    description: item.data.description,
    tags: item.data.tags,
    url: `/resume`, // Jobs are shown on resume page
    date: item.data.startDate,
    company: item.data.company,
    position: item.data.position,
    location: item.data.location,
    technologies: item.data.technologies,
    current: item.data.current
  }))
];

const totalItems = searchData.length;
---

<MainLayout
  title="Search"
  description="Search through all content including projects, hackathons, and professional experiences."
>
  <div class="bg-white dark:bg-slate-900 min-h-screen">
    <!-- Hero Section -->
    <header class="relative bg-gradient-to-r from-brand-primary to-brand-light text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-5xl font-bold mb-4">Search</h1>
          <p class="text-xl text-brand-white/80 mb-8 max-w-3xl mx-auto">
            Discover content across my entire portfolio. Search through {totalItems} items including projects, hackathons, and professional experiences.
          </p>

          <!-- Search Box -->
          <div class="max-w-2xl mx-auto">
            <div class="relative">
              <input
                type="text"
                id="search-input"
                placeholder="Search for anything..."
                class="w-full pl-12 pr-4 py-4 text-lg border-0 rounded-xl bg-white/10 backdrop-blur-sm text-white placeholder-brand-white/60 focus:ring-2 focus:ring-white/50 focus:outline-none"
                autocomplete="off"
              />
              <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-6 h-6 text-brand-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>

              <!-- Search suggestions -->
              <div id="search-suggestions" class="absolute top-full left-0 right-0 mt-2 bg-white dark:bg-gray-800 rounded-lg shadow-xl hidden z-10 max-h-60 overflow-y-auto">
                <!-- Suggestions will be populated by JavaScript -->
              </div>
            </div>

            <!-- Quick search buttons -->
            <div class="flex flex-wrap justify-center gap-2 mt-6">
              <button class="quick-search px-3 py-1 bg-white/20 text-white rounded-full text-sm hover:bg-white/30 transition-colors" data-query="JavaScript">
                JavaScript
              </button>
              <button class="quick-search px-3 py-1 bg-white/20 text-white rounded-full text-sm hover:bg-white/30 transition-colors" data-query="React">
                React
              </button>
              <button class="quick-search px-3 py-1 bg-white/20 text-white rounded-full text-sm hover:bg-white/30 transition-colors" data-query="Python">
                Python
              </button>
              <button class="quick-search px-3 py-1 bg-white/20 text-white rounded-full text-sm hover:bg-white/30 transition-colors" data-query="Hackathon">
                Hackathons
              </button>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Search Controls -->
      <div class="mb-8 hidden" id="search-controls">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <div class="flex items-center space-x-4">
            <div class="text-gray-600 dark:text-gray-400">
              Found <span id="results-count">0</span> results
            </div>

            <!-- Type Filter -->
            <select
              id="type-filter"
              class="px-4 py-2 border border-brand-accent dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-primary focus:border-transparent"
            >
              <option value="">All Types</option>
              <option value="project">Projects</option>
              <option value="hackathon">Hackathons</option>
              <option value="experience">Experiences</option>
            </select>
          </div>

          <!-- Sort Options -->
          <select
            id="sort-option"
            class="px-4 py-2 border border-brand-accent dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-primary focus:border-transparent"
          >
            <option value="relevance">Best Match</option>
            <option value="date-desc">Newest First</option>
            <option value="date-asc">Oldest First</option>
            <option value="title">Title A-Z</option>
          </select>
        </div>
      </div>

      <!-- Search Results -->
      <div id="search-results" class="space-y-6">
        <!-- Initial state -->
        <div id="initial-state" class="text-center py-16">
          <svg class="w-24 h-24 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Start Your Search</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-2xl mx-auto">
            Search through my entire portfolio to find what you're looking for. Try searching for technologies, topics, or specific content.
          </p>

          <!-- Search Statistics -->
          <div class="grid grid-cols-2 md:grid-cols-5 gap-4 max-w-2xl mx-auto">
            <div class="text-center p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
              <div class="text-2xl font-bold text-brand-primary dark:text-brand-light">{allProjects.length}</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Projects</div>
            </div>
            <div class="text-center p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
              <div class="text-2xl font-bold text-brand-primary dark:text-brand-light">{allHackathons.length}</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Hackathons</div>
            </div>
            <div class="text-center p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
              <div class="text-2xl font-bold text-brand-primary dark:text-brand-light">{allJobs.length}</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Professional Experiences</div>
            </div>
          </div>
        </div>

        <!-- No Results -->
        <div id="no-results" class="hidden text-center py-16">
          <svg class="w-24 h-24 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">No Results Found</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            We couldn't find anything matching your search. Try different keywords or browse by category.
          </p>
          <button
            id="clear-search"
            class="px-6 py-3 bg-brand-primary text-brand-white rounded-lg hover:bg-brand-dark transition-colors"
          >
            Clear Search
          </button>
        </div>

        <!-- Results Container -->
        <div id="results-container" class="hidden">
          <!-- Results will be populated by JavaScript -->
        </div>
      </div>
    </div>
  </div>

  <!-- Load Fuse.js -->
  <script src="https://cdn.jsdelivr.net/npm/fuse.js@7.0.0/dist/fuse.min.js"></script>
</MainLayout>

<script define:vars={{ searchData }}>
  let fuse;
  let currentResults = [];
  let currentQuery = '';

  // Initialize Fuse.js
  function initializeFuse() {
    const options = {
      keys: [
        { name: 'title', weight: 2 },
        { name: 'description', weight: 1.5 },
        { name: 'tags', weight: 1.2 },
        { name: 'technologies', weight: 1 },
        { name: 'company', weight: 0.8 },
        { name: 'position', weight: 0.8 },
        { name: 'location', weight: 0.5 }
      ],
      threshold: 0.3,
      includeScore: true,
      includeMatches: true,
      minMatchCharLength: 2
    };

    fuse = new Fuse(searchData, options);
  }

  // Perform search
  function search(query, typeFilter = '', sortBy = 'relevance') {
    if (!query.trim()) {
      showInitialState();
      return;
    }

    let results = fuse.search(query);

    // Apply type filter
    if (typeFilter) {
      results = results.filter(result => result.item.type === typeFilter);
    }

    // Sort results
    switch (sortBy) {
      case 'date-desc':
        results.sort((a, b) => new Date(b.item.date) - new Date(a.item.date));
        break;
      case 'date-asc':
        results.sort((a, b) => new Date(a.item.date) - new Date(b.item.date));
        break;
      case 'title':
        results.sort((a, b) => a.item.title.localeCompare(b.item.title));
        break;
      case 'relevance':
      default:
        // Already sorted by relevance from Fuse.js
        break;
    }

    currentResults = results;
    displayResults(results, query);
  }

  // Display search results
  function displayResults(results, query) {
    const initialState = document.getElementById('initial-state');
    const noResults = document.getElementById('no-results');
    const resultsContainer = document.getElementById('results-container');
    const searchControls = document.getElementById('search-controls');
    const resultsCount = document.getElementById('results-count');

    initialState.classList.add('hidden');
    noResults.classList.add('hidden');

    if (results.length === 0) {
      noResults.classList.remove('hidden');
      resultsContainer.classList.add('hidden');
      searchControls.classList.add('hidden');
      return;
    }

    searchControls.classList.remove('hidden');
    resultsContainer.classList.remove('hidden');
    resultsCount.textContent = results.length;

    // Group results by type
    const groupedResults = results.reduce((acc, result) => {
      const type = result.item.type;
      if (!acc[type]) acc[type] = [];
      acc[type].push(result);
      return acc;
    }, {});

    let html = '';

    Object.entries(groupedResults).forEach(([type, typeResults]) => {
      const typeConfig = getTypeConfig(type);

      html += `
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
            ${typeConfig.icon}
            ${typeConfig.title} (${typeResults.length})
          </h2>
          <div class="${typeConfig.gridClass}">
      `;

      typeResults.forEach(result => {
        html += generateResultCard(result, query);
      });

      html += `
          </div>
        </section>
      `;
    });

    resultsContainer.innerHTML = html;
  }

  // Get type configuration
  function getTypeConfig(type) {
    const configs = {
      project: {
        title: 'Projects',
        icon: '<svg class="w-6 h-6 mr-2 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>',
        gridClass: 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'
      },
      hackathon: {
        title: 'Hackathons',
        icon: '<svg class="w-6 h-6 mr-2 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>',
        gridClass: 'space-y-4'
      },
      experience: {
        title: 'Experiences',
        icon: '<svg class="w-6 h-6 mr-2 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 01-2 2H10a2 2 0 01-2-2V6m8 0V4a2 2 0 00-2-2H10a2 2 0 00-2 2v2"></path></svg>',
        gridClass: 'space-y-4'
      }
    };

    return configs[type];
  }

  // Generate result card HTML
  function generateResultCard(result, query) {
    const item = result.item;
    const highlightedTitle = highlightMatches(item.title, result.matches, 'title');
    const highlightedDescription = highlightMatches(item.description, result.matches, 'description');

    switch (item.type) {
      case 'project':
        return `
          <article class="group bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow overflow-hidden relative">
            ${item.image ? `
              <div class="aspect-video overflow-hidden">
                <img src="${item.image}" alt="${item.title}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
              </div>
            ` : ''}
            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <time class="text-sm text-gray-600 dark:text-gray-400">
                  ${new Date(item.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
                </time>
                <span class="px-2 py-1 text-xs font-medium rounded ${getStatusClass(item.status)}">
                  ${item.status}
                </span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 group-hover:text-brand-primary dark:group-hover:text-brand-light transition-colors">
                ${highlightedTitle}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-3">${highlightedDescription}</p>
              <div class="flex flex-wrap gap-1">
                ${item.technologies.slice(0, 3).map(tech => `<span class="px-2 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded">${tech}</span>`).join('')}
              </div>
            </div>
            <a href="${item.url}" class="absolute inset-0" aria-label="View ${item.title}"></a>
          </article>
        `;

      case 'album':
        return `
          <article class="group relative overflow-hidden rounded-xl bg-gray-200 dark:bg-gray-700 aspect-[4/3]">
            <img src="${item.image}" alt="${item.title}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
            <div class="absolute bottom-4 left-4 right-4 text-white">
              <h3 class="text-lg font-semibold mb-1">${highlightedTitle}</h3>
              <p class="text-sm text-gray-200 mb-2">${highlightedDescription}</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center text-xs">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  ${item.photoCount} photos
                </div>
                <time class="text-xs text-gray-300">
                  ${new Date(item.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
                </time>
              </div>
            </div>
            <a href="${item.url}" class="absolute inset-0"></a>
          </article>
        `;

      default:
        return `
          <article class="group bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">
                  ${highlightedTitle}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 mb-3">${highlightedDescription}</p>
                ${item.company ? `<div class="text-brand-primary dark:text-brand-light font-medium mb-2">${item.company}</div>` : ''}
                ${item.location ? `<div class="text-gray-600 dark:text-gray-400 text-sm mb-2">${item.location}</div>` : ''}
                ${item.technologies ? `
                  <div class="flex flex-wrap gap-1">
                    ${item.technologies.slice(0, 4).map(tech => `<span class="px-2 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded">${tech}</span>`).join('')}
                  </div>
                ` : ''}
              </div>
            </div>
            <a href="${item.url}" class="absolute inset-0" aria-label="View ${item.title}"></a>
          </article>
        `;
    }
  }

  // Highlight search matches
  function highlightMatches(text, matches, key) {
    if (!matches || !text) return text;

    const match = matches.find(m => m.key === key);
    if (!match) return text;

    let highlightedText = text;
    match.indices.forEach(([start, end]) => {
      const before = text.substring(0, start);
      const highlighted = text.substring(start, end + 1);
      const after = text.substring(end + 1);
      highlightedText = before + `<mark class="bg-yellow-200 dark:bg-yellow-800 px-1 rounded">${highlighted}</mark>` + after;
    });

    return highlightedText;
  }

  // Get status class
  function getStatusClass(status) {
    switch (status) {
      case 'completed':
        return 'bg-brand-primary/10 dark:bg-brand-primary/20 text-brand-primary dark:text-brand-light';
      case 'in-progress':
        return 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200';
      default:
        return 'bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200';
    }
  }

  // Show initial state
  function showInitialState() {
    document.getElementById('initial-state').classList.remove('hidden');
    document.getElementById('no-results').classList.add('hidden');
    document.getElementById('results-container').classList.add('hidden');
    document.getElementById('search-controls').classList.add('hidden');
  }

  // Generate search suggestions
  function generateSuggestions(query) {
    if (!query.trim() || query.length < 2) return [];

    const results = fuse.search(query).slice(0, 5);
    return results.map(result => ({
      title: result.item.title,
      type: result.item.type,
      url: result.item.url
    }));
  }

  // Show search suggestions
  function showSuggestions(suggestions) {
    const suggestionsContainer = document.getElementById('search-suggestions');

    if (suggestions.length === 0) {
      suggestionsContainer.classList.add('hidden');
      return;
    }

    const html = suggestions.map(suggestion => `
      <div class="px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer border-b border-gray-200 dark:border-gray-600 last:border-b-0">
        <div class="flex items-center justify-between">
          <span class="text-gray-900 dark:text-white">${suggestion.title}</span>
          <span class="text-xs text-gray-500 dark:text-gray-400 capitalize">${suggestion.type}</span>
        </div>
      </div>
    `).join('');

    suggestionsContainer.innerHTML = html;
    suggestionsContainer.classList.remove('hidden');

    // Add click handlers to suggestions
    suggestionsContainer.querySelectorAll('div').forEach((div, index) => {
      div.addEventListener('click', () => {
        window.location.href = suggestions[index].url;
      });
    });
  }

  // Initialize everything
  document.addEventListener('DOMContentLoaded', function() {
    initializeFuse();

    const searchInput = document.getElementById('search-input');
    const typeFilter = document.getElementById('type-filter');
    const sortOption = document.getElementById('sort-option');
    const clearSearch = document.getElementById('clear-search');
    const quickSearchButtons = document.querySelectorAll('.quick-search');
    const suggestions = document.getElementById('search-suggestions');

    let searchTimeout;

    // Search input handler
    searchInput.addEventListener('input', (e) => {
      const query = e.target.value;
      currentQuery = query;

      clearTimeout(searchTimeout);

      if (query.trim()) {
        // Show suggestions
        const suggestionResults = generateSuggestions(query);
        showSuggestions(suggestionResults);

        // Debounced search
        searchTimeout = setTimeout(() => {
          search(query, typeFilter.value, sortOption.value);
        }, 300);
      } else {
        suggestions.classList.add('hidden');
        showInitialState();
      }
    });

    // Hide suggestions when clicking outside
    document.addEventListener('click', (e) => {
      if (!e.target.closest('#search-input') && !e.target.closest('#search-suggestions')) {
        suggestions.classList.add('hidden');
      }
    });

    // Filter and sort handlers
    typeFilter.addEventListener('change', () => {
      if (currentQuery) {
        search(currentQuery, typeFilter.value, sortOption.value);
      }
    });

    sortOption.addEventListener('change', () => {
      if (currentQuery) {
        search(currentQuery, typeFilter.value, sortOption.value);
      }
    });

    // Clear search
    clearSearch.addEventListener('click', () => {
      searchInput.value = '';
      currentQuery = '';
      typeFilter.value = '';
      sortOption.value = 'relevance';
      showInitialState();
    });

    // Quick search buttons
    quickSearchButtons.forEach(button => {
      button.addEventListener('click', () => {
        const query = button.dataset.query;
        searchInput.value = query;
        currentQuery = query;
        search(query, typeFilter.value, sortOption.value);
      });
    });

    // URL query parameter support
    const urlParams = new URLSearchParams(window.location.search);
    const queryParam = urlParams.get('q');
    if (queryParam) {
      searchInput.value = queryParam;
      currentQuery = queryParam;
      search(queryParam);
    }
  });
</script>

