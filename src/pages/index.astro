      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        {
          [
            "C# / .NET",
            "MAUI",
            "Bluetooth",
            ".NET",
            "Azure",
            "Git / Github",
            "Bash",
            "CI / CD",
            "Astro",
            "PHP Object",
            "HTML5/CSS3/JS",
            "UnitTests",
          ].map((skill) => (
            <div class="bg-brand-light dark:bg-brand-dark rounded-lg p-4 text-center shadow-sm hover:shadow-md transition-shadow">
              <div class="text-lg font-semibold">{skill}</div>
            </div>
          ))
        }
      </div>

      <div class="text-center mt-12">
        <a
