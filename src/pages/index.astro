---
import { getCollection } from "astro:content";
import MainLayout from "../layouts/MainLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import HackathonCard from "../components/HackathonCard.astro";

const featuredProjects = await getCollection(
  "projects",
  ({ data }) => data.isFeatured
);
featuredProjects.sort(
  (a, b) => b.data.startDate.valueOf() - a.data.startDate.valueOf()
);

const featuredHackathons = await getCollection(
  "hackathons",
  ({ data }) => data.isFeatured
);
featuredHackathons.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const viewMoreStyle = "inline-flex items-center px-6 py-3 border border-brand-primary text-base font-medium rounded-lg bg-brand-primary hover:bg-brand-secondary hover:text-white transition-colors";
---

<MainLayout
  title="Francois Raminosona - Full-Stack Developer & Photographer"
  description="Welcome to my digital portfolio showcasing full-stack development projects, and professional journey"
>
  <!-- Hero Section -->
  <section
    class="relative text-white"
    style="background-image: url('/banners/banner_framinosona_4.jpg'); background-size: cover; background-position: center; background-blend-mode: overlay;"
  >
    <!-- Light mode overlay - light blue uniform -->
    <div class="absolute inset-0 bg-slate-200/80 dark:hidden"></div>
    <!-- Dark mode overlay - dark blue uniform -->
    <div class="absolute inset-0 bg-slate-800/90 hidden dark:block"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="text-center">
        <img
          src="/profile/profile_1.jpg"
          alt="Francois Raminosona"
          class="w-32 h-32 rounded-full mx-auto mb-12 border-4 border-white shadow-lg"
        />
        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-12 text-gray-900 dark:text-white"
        >
          Hi, I'm <span class="text-brand-primary dark:text-yellow-400"
            >Francois Raminosona</span
          >
        </h1>
        <p
          class="text-xl sm:text-2xl mb-12 text-brand-dark dark:text-gray-200 max-w-3xl mx-auto"
        >
          .NET / Mobile / Tech-team Lead / Software architect
        </p>
          <a
            href="/resume"
            class="inline-flex items-center px-8 py-3 border border-transparent text-lg font-medium rounded-lg bg-brand-dark hover:bg-brand-primary text-white dark:bg-yellow-400 dark:hover:bg-yellow-300 dark:text-gray-900 transition-colors shadow-lg"
          >
            View Resume
          </a>
      </div>

      <!-- Quick Stats -->
      <div class="mt-16 grid grid-cols-2 lg:grid-cols-4 gap-8 text-center">
        <div>
          <div
            class="text-3xl font-bold text-brand-primary dark:text-yellow-400"
          >
            {new Date().getFullYear() - 2013} üíº
          </div>
          <div class="text-gray-600 dark:text-gray-300">Years Experience</div>
        </div>
        <div>
          <div
            class="text-3xl font-bold text-brand-primary dark:text-yellow-400"
          >
            40+ üåç
          </div>
          <div class="text-gray-600 dark:text-gray-300">Countries Visited</div>
        </div>
        <div>
          <div
            class="text-3xl font-bold text-brand-primary dark:text-yellow-400"
          >
            6 üèÜ
          </div>
          <div class="text-gray-600 dark:text-gray-300">
            Hackathon Victories
          </div>
        </div>
        <div>
          <div
            class="text-3xl font-bold text-brand-primary dark:text-yellow-400"
          >
            ‚àû ‚òï
          </div>
          <div class="text-gray-600 dark:text-gray-300">Cups of Coffee</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-16 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Featured Projects
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Showcase of my latest and most impactful development work
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          featuredProjects
            .slice(0, 6)
            .map((project) => <ProjectCard project={project} showReadMore={false} />)
        }
      </div>

      <div class="text-center mt-12">
        <a
          href="/projects"
          class={viewMoreStyle}
        >
          View All Projects
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Hackathons -->
  <section class="py-16 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
